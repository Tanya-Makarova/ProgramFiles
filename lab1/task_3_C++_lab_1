// Необходимо ввести положительное число и проверить с помощью программы является ли оно палиндромом.
// Подключение библиотек и пространства имен
#include <iostream>   //стандартаня библиотека ввода/вывода
#include <stack>   //подключаем стандартную библиотеку для работы со стеком - структурой данных по приципу LIFO
#include <string>   //подключаем бибилотеку для работы со строками (данными типа string)

using namespace std;  //позволяет использовать стандартные функции без префикса (например, cout вместо std::cout)

int main() {   //начало главной функции программы
    int number;  //объявляем переменную для хранения числа введеного пользователем

    //запрашиваем ввод числа от пользователя
    cout << "Enter a positive number: ";  //приглашение ввести число
    cin >> number;  //чтение введеного числа и сохранение его в переменную

    //проверяем, что введено положительное число
    if (number < 0) {  //условие, если число меньше 0, то программа выводит false и заканчивает программу с кодом ошибки 1
        cout << "false" << endl;
        return 1;
    }

    //преобразуем введеное число в строку для удобства обработки
    string numStr = to_string(number);
    stack<char> charStack;  //создаем пустой стек для хранения символов

    //помещаем все символы в стек
    for (char c : numStr) {  //проходим по каждой цифре в строке, помещая ее в стек
        charStack.push(c);  //после этого стек содержит цифры в обратном порядке
    }

    //извлекаем символы из стека и сравниваем с исходной строкой
    bool isPalindrome = true;  //создаем флаговую переменную, предполагающую, что число является палиндромом
    for (char c : numStr) {  //сравниваем цифры исходного числа (с начала) с цифрами из стека (с конца)
        if (c != charStack.top()) {     //charStack.top() - получает последнюю добавленную цифру
            isPalindrome = false;    //если цифры не совпадают, то устанавливается флаг false
            break;
        }
        charStack.pop();     //удаляем верхний стека элемент после сравнения
    }

    //выводим результат и соответствующее сообщение пользователю
    if (isPalindrome) {
        cout << "The number is a palindrome" << endl;
    }
    else {
        cout << "The number is not a palindrome" << endl;
    }

    return 0;
}	
